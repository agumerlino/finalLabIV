@model FinalPrueba.Models.Ticket

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <h3 class="text-center">Estas seguro que quieres eliminar este ticket?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-md-6 offset-md-3">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.afiliado.nombreCompleto)
            </dd>
            <dt class="col-sm-2">
                Fecha de solicitud
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fechaSolicitud)
            </dd>
            <dt class="col-sm-2">
                Observacion
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.observacion)
            </dd>
        </dl>

        <form asp-action="Borrar">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Volver</a>
        </form>
    </div>
</div>
