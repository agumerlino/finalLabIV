@model FinalPrueba.Models.Ticket

@{
    ViewData["Title"] = "Details";
}
<div class="container py-4">
    <h1 class="text-center">Detalles del ticket</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div>
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.afiliado.nombreCompleto)
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de solicitud
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.fechaSolicitud)
                    </dd>
                    <dt class="col-sm-2">
                        Observacion
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.observacion)
                    </dd>
                    <dt class="col-sm-2">
                        Foto
                    </dt>
                    <dd class="col-sm-10">
                        @if (!string.IsNullOrEmpty(@Model.afiliado.foto))
                        {
                            <img id="imgAfiliado" src="~/images/afiliados/@Model.afiliado.foto" class="img-thumnail" asp-append-version="true" style="max-height:80px; max-width:80px">
                        }
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.ticketDetalle)
                    </dd>

                </dl>
            </div>
            <div>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Editar</a> |
                <a href="#" class="btn btn-primary" onclick="goBack()">Volver</a>
            </div>
        </div>
    </div>
</div>
<script>
    function goBack() {
        window.history.back();
    }
</script>
