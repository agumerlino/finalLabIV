@model FinalPrueba.Models.Afiliado

@{
    ViewData["Title"] = "Details";
}
<div class="container py-4">
    <h1 class="text-center">Detalles del afiliado</h1>

    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div>

                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Nombre
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.nombre)
                    </dd>
                    <dt class="col-sm-2">
                        Apellido
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.apellido)
                    </dd>
                    <dt class="col-sm-2">
                        DNI
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.dni)
                    </dd>
                    <dt class="col-sm-2">
                        Fecha de nacimiento
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.fechaNacimiento)
                    </dd>
                    <dt class="col-sm-2">
                        Foto
                    </dt>
                    <dd class="col-sm-10">
                        @if (!string.IsNullOrEmpty(@Model.foto))
                        {
                            <img id="imgAfiliado" src="~/images/afiliados/@Model.foto" class="img-thumnail" asp-append-version="true" style="max-height:80px; max-width:80px">
                        }

                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Editar</a> |
                <a asp-action="Index" class="btn btn-primary">Volver</a>
            </div>
        </div>
    </div>
</div>