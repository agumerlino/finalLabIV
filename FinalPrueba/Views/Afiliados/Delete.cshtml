@model FinalPrueba.Models.Afiliado

@{
    ViewData["Title"] = "Delete";
}


<div class="container py-4">
    <h3 class="text-center">Estas seguro que quieres eliminar este afiliado?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Nombre
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.nombre)
            </dd>
            <dt class="col-sm-2">
                Apellido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.apellido)
            </dd>
            <dt class="col-sm-2">
                DNI
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.dni)
            </dd>
            <dt class="col-sm-2">
                Fecha de nacimiento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fechaNacimiento)
            </dd>
            <dt class="col-sm-2">
                Foto
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(@Model.foto))
                {
                    <img id="imgAfiliado" src="~/images/afiliados/@Model.foto" class="img-thumnail" asp-append-version="true" style="max-height:80px; max-width:80px">
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Vovler</a>
        </form>
    </div>
</div>