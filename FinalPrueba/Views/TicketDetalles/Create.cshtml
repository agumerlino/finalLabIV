@model FinalPrueba.Models.TicketDetalle

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Nuevo detalle</h1>


<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdTicket" class="control-label">Id ticket</label>
                    <select asp-for="IdTicket" class="form-control" asp-items="ViewBag.IdTicket"></select>

                </div>
                <div class="form-group">
                    <label asp-for="descripcionPedido" class="control-label">Descripcion de pedido</label>
                    <input asp-for="descripcionPedido" class="form-control" />
                    <span asp-validation-for="descripcionPedido" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="estadoId" class="control-label">Observacion de estado</label>
                    <select asp-for="estadoId" class="form-control" asp-items="ViewBag.estadoId"></select>

                </div>
                <div class="form-group">
                    <label asp-for="fechaEstado" class="control-label">Fecha de estado</label>
                    <input asp-for="fechaEstado" class="form-control" />
                    <span asp-validation-for="fechaEstado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Crear" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-primary">Vovler</a>
                </div>
            </form>

        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
