@model FinalPrueba.Models.TicketDetalle

@{
    ViewData["Title"] = "Delete";
}

<div class="container py-4">
    <h3 class="text-center">Estas seguro que quieres eliminar este detalle?</h3>
    <div>

        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Id de ticket
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdTicket)
            </dd>
            <dt class="col-sm-2">
                Descripcion de pedido
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.descripcionPedido)
            </dd>
            <dt class="col-sm-2">
                Id de estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.estadoId)
            </dd>
            <dt class="col-sm-2">
                Fecha de estado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.fechaEstado)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-primary">Volver</a>
        </form>
    </div>
</div>
